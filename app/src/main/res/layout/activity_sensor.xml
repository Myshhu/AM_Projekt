<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".sensorActivity.SensorActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvLightMeasurement"
            android:text="@string/light_measurement"
            android:gravity="center"
            android:textSize="30sp"/>

    <TextView
            android:id="@+id/tvLightMeasurement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvProximityMeasurementLabel"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:textSize="40sp"
            android:text="00000"/>

    <TextView
            android:id="@+id/tvProximityMeasurementLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/proximity_measurement"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_above="@+id/tvProximityMeasurement"
            android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/tvProximityMeasurement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="40sp"
            android:text="00000"
            android:layout_marginStart="0dp"
            android:layout_centerVertical="true"/>

</RelativeLayout>