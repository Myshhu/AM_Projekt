<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_show_weather_db_content"
        android:orientation="vertical"
        tools:context=".ShowWeatherDBActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tvShowDBContentID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ID"
                android:gravity="center"
                android:layout_weight="2"/>

        <TextView
                android:id="@+id/tvShowDBContentName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name"
                android:gravity="center"
                android:layout_weight="2"/>

        <TextView
                android:id="@+id/tvShowDBContentCity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="City"
                android:gravity="center"
                android:layout_weight="2"/>

        <TextView
                android:id="@+id/tvShowDBContentTemperature"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Temp"
                android:gravity="center"
                android:layout_weight="2"/>

        <TextView
                android:id="@+id/tvShowDBContentPressure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pressure"
                android:gravity="center"
                android:layout_weight="2"/>

        <TextView
                android:id="@+id/tvShowDBContentHumidity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/humidity"
                android:gravity="center"
                android:layout_weight="1"/>

    </LinearLayout>



</ScrollView>