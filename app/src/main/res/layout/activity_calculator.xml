<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".calculatorActivity.CalculatorActivity">

    <TextView
            android:text="@string/first_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"/>

    <EditText
            android:id="@+id/etFirstNumber"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="30sp"/>

    <TextView
            android:text="@string/second_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="30sp"/>

    <EditText
            android:id="@+id/etSecondNumber"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="30sp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_weight="1"
                android:textSize="30sp"
                android:onClick="btnAddClick"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_weight="1"
                android:textSize="30sp"
                android:onClick="btnSubtractClick"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_weight="1"
                android:textSize="30sp"
                android:onClick="btnMultiplyClick"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_weight="1"
                android:textSize="30sp"
                android:onClick="btnDivideClick"/>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:gravity="center"
            android:textSize="30sp"/>

    <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            android:text="0"/>
</LinearLayout>